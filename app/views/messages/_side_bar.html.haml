.side-bar
  .side-bar_user
    .side-bar_user_top-items
      .side-bar_user_top-items-name
        = current_user.name
      .side-bar_user_top-items-icons
        = link_to new_group_path, class: "contents__btn contents__btn--edit" do
          <i class='far fa-edit'></i>
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'icon')
  .side-bar-group
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        = group.name
      .side-bar-group-one
        .side-bar-group-one-message
          = group.show_last_message